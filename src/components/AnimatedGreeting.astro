---
const greetings = [
	{ en: "Welcome to my abode", jp: "ようこそいらっしゃいました" },
	{ en: "Feel free to explore it", jp: "自由に探索してください" },
];
---

<div class="animated-greeting">
	{greetings.map((greeting, index) => (
		<div class="greeting-text" data-index={index}>
			<span class="greeting-en">{greeting.en}</span>
			<span class="greeting-jp">{greeting.jp}</span>
		</div>
	))}
</div>

<style>
	.animated-greeting {
		position: relative;
		min-height: 3.5rem;
		display: flex;
		align-items: center;
		justify-content: center;
		margin-bottom: var(--spacing-lg);
	}

	.greeting-text {
		position: absolute;
		inset: 0;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: var(--spacing-xs);
		opacity: 0;
		animation: textFadeCycle 12s ease-in-out infinite;
	}

	/* Stagger each greeting */
	.greeting-text[data-index="0"] {
		animation-delay: 0s;
	}

	.greeting-text[data-index="1"] {
		animation-delay: 6s;
	}

	.greeting-en {
		font-family: var(--font-serif);
		font-size: var(--font-size-lg);
		color: var(--color-text-secondary);
		font-weight: 400;
		letter-spacing: 0.05em;
		text-align: center;
	}

	.greeting-jp {
		font-family: var(--font-serif);
		font-size: var(--font-size-sm);
		color: var(--color-text-light);
		font-weight: 300;
		letter-spacing: 0.1em;
		text-align: center;
	}

	/* Responsive sizing */
	@media (max-width: 768px) {
		.animated-greeting {
			min-height: 3rem;
		}

		.greeting-en {
			font-size: var(--font-size-base);
		}

		.greeting-jp {
			font-size: 0.8rem;
		}
	}

	@media (max-width: 480px) {
		.animated-greeting {
			min-height: 2.5rem;
		}

		.greeting-en {
			font-size: var(--font-size-sm);
		}

		.greeting-jp {
			font-size: 0.7rem;
		}
	}

	/* Pause animation on hover for readability */
	.animated-greeting:hover .greeting-text {
		animation-play-state: paused;
	}

	/* Respect reduced motion */
	@media (prefers-reduced-motion: reduce) {
		.greeting-text {
			animation: none;
			opacity: 0;
		}

		.greeting-text[data-index="0"] {
			opacity: 1;
		}
	}
</style>
